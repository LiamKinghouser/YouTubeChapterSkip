{
  "name": "YouTube Chapter Skip",
  "description": "Skip to next YouTube Chapter",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_icon": {
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "128": "/images/icon128.png"
  },
  "commands": {
    "next-youtube-chapter": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Skip to next YouTube Chapter",
      "global": true
    }
  }
}